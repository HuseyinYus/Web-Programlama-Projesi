@model IEnumerable<Web_Programlama_Projesi.Models.Appointment>

@{
    ViewData["Title"] = "Randevu Yönetimi";
}

<div class="container py-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary mb-0">
                <i class="fa-regular fa-calendar-check me-2"></i>
                @(User.IsInRole("Admin") ? "Tüm Randevular (Yönetim)" : "Randevularım")
            </h2>
            <p class="text-muted small mb-0">
                @(User.IsInRole("Admin") ? "Üyelerin randevu taleplerini buradan yönetebilirsiniz." : "Planlanmış egzersiz takviminizi buradan takip edebilirsiniz.")
            </p>
        </div>

        @if (!User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-primary rounded-pill shadow-sm px-4">
                <i class="fa-solid fa-plus"></i> Yeni Randevu Al
            </a>
        }
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="py-3 ps-4 text-muted border-0">Tarih & Saat</th>
                                <th class="py-3 text-muted border-0">Üye</th>
                                <th class="py-3 text-muted border-0">Antrenör & Hizmet</th>
                                <th class="py-3 text-muted border-0">Durum</th>
                                <th class="py-3 text-end pe-4 text-muted border-0">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex flex-column">
                                            <span class="fw-bold text-dark">@item.Date.ToString("dd MMM yyyy")</span>
                                            <span class="text-muted small">@item.Time.ToString(@"hh\:mm")</span>
                                        </div>
                                    </td>

                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="bg-light rounded-circle p-2 me-2 text-secondary">
                                                <i class="fa-solid fa-user"></i>
                                            </div>
                                            <span class="fw-semibold">@(item.Member != null ? item.Member.UserName : "Bilinmiyor")</span>
                                        </div>
                                    </td>

                                    <td>
                                        <div class="d-flex flex-column">
                                            <span class="fw-semibold text-primary">@item.Trainer.FullName</span>
                                            <span class="badge bg-info bg-opacity-10 text-info rounded-pill w-auto align-self-start mt-1">
                                                @item.Service.ServiceName
                                            </span>
                                        </div>
                                    </td>

                                    <td>
                                        @{
                                            var statusColor = item.Status == "Onaylandı" ? "success" :
                                            (item.Status == "İptal Edildi" ? "danger" : "warning");
                                            var statusIcon = item.Status == "Onaylandı" ? "fa-check" :
                                            (item.Status == "İptal Edildi" ? "fa-xmark" : "fa-hourglass-half");
                                        }
                                        <span class="badge bg-@statusColor bg-gradient rounded-pill px-3 py-2">
                                            <i class="fa-solid @statusIcon me-1"></i> @item.Status
                                        </span>
                                    </td>

                                    <td class="text-end pe-4">
                                        <div class="btn-group">
                                            @if (User.IsInRole("Admin"))
                                            {
                                                @if (item.Status == "Onay Bekliyor")
                                                {
                                                    <a asp-action="Approve" asp-route-id="@item.AppointmentId" class="btn btn-sm btn-outline-success" title="Onayla">
                                                        <i class="fa-solid fa-check"></i> Onayla
                                                    </a>
                                                    <a asp-action="Cancel" asp-route-id="@item.AppointmentId" class="btn btn-sm btn-outline-danger" title="Reddet">
                                                        <i class="fa-solid fa-xmark"></i> Reddet
                                                    </a>
                                                }
                                                else
                                                {
                                                    <span class="text-muted small fst-italic me-2">İşlem yapıldı</span>
                                                }

                                                <a asp-action="Delete" asp-route-id="@item.AppointmentId" class="btn btn-sm btn-outline-secondary" title="Kalıcı Sil">
                                                    <i class="fa-solid fa-trash"></i>
                                                </a>
                                            }
                                            else
                                            {
                                                @if (item.Status == "Onay Bekliyor")
                                                {
                                                    <a asp-action="Delete" asp-route-id="@item.AppointmentId" class="btn btn-sm btn-outline-danger" title="İptal Et">
                                                        <i class="fa-solid fa-ban"></i> İptal
                                                    </a>
                                                }
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fa-regular fa-calendar-xmark fa-4x text-muted opacity-25 mb-3"></i>
                    <h4 class="text-muted">Görüntülenecek randevu yok.</h4>
                </div>
            }
        </div>
    </div>
</div>