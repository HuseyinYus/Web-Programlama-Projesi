@model Web_Programlama_Projesi.Models.Trainer

@{
    ViewData["Title"] = "Antrenörü Sil";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">

            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">

                <div class="card-header bg-danger bg-gradient text-white p-4 text-center border-0">
                    <div class="mb-3">
                        <div class="d-inline-flex align-items-center justify-content-center bg-white bg-opacity-25 rounded-circle" style="width: 80px; height: 80px;">
                            <i class="fa-solid fa-triangle-exclamation fa-3x text-white"></i>
                        </div>
                    </div>
                    <h3 class="fw-bold mb-1">Silme İşlemi</h3>
                    <p class="mb-0 opacity-75 small">Dikkat! Bu işlem geri alınamaz.</p>
                </div>

                <div class="card-body p-4 p-md-5 bg-white text-center">

                    <h5 class="text-muted mb-4">Aşağıdaki antrenör kaydını silmek üzeresiniz:</h5>

                    <div class="p-3 bg-light rounded-4 border border-danger border-opacity-25 mb-4">
                        <div class="mb-2">
                            <i class="fa-solid fa-user-tie fa-2x text-secondary"></i>
                        </div>
                        <h4 class="fw-bold text-dark">@Model.FullName</h4>
                        <span class="badge bg-danger bg-opacity-10 text-danger rounded-pill px-3 py-1 mb-2">
                            @Model.Specialization
                        </span>
                        <p class="text-muted small mb-0">
                            <i class="fa-regular fa-clock me-1"></i> @Model.WorkingHours
                        </p>
                        @if (!string.IsNullOrEmpty(Model.Biography))
                        {
                            <hr class="my-2 opacity-25">
                            <p class="text-muted small fst-italic mb-0">
                                "@(Model.Biography.Length > 100 ? Model.Biography.Substring(0, 100) + "..." : Model.Biography)"
                            </p>
                        }
                    </div>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="TrainerId" />

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger btn-lg rounded-pill shadow-sm fw-bold hover-scale">
                                <i class="fa-solid fa-trash-can me-2"></i> Evet, Kaydı Sil
                            </button>
                            <a asp-action="Index" class="btn btn-light btn-lg rounded-pill text-muted hover-scale">
                                Vazgeç
                            </a>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

<style>
    .hover-scale {
        transition: transform 0.2s;
    }

        .hover-scale:hover {
            transform: translateY(-2px);
        }
</style>